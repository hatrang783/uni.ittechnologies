<%= form_with(model: product) do |form| %>
<% if product.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :productname, class: label_class %>
          <%= form.text_field :productname, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.number_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :stock, class: label_class %>
          <%= form.number_field :stock, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :category_id, class: label_class %>
        <%= form.select :category_id, options_from_collection_for_select( Category.all, 'id', 'categoryname', selected = product.category_id), class: label_class %>
        </div>
  <div class="mb-6">
        <%= form.label :brand_id, class: label_class %>
        <%= form.select :brand_id, options_from_collection_for_select( Brand.all, 'id', 'brandname', selected = product.brand_id), class: label_class %>
      </div>
  <div class="mb-6">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

<%= form.submit style: "background-color: #E98A9F; color: white; padding: 0.5rem 1rem; border-radius: 0.25rem;" %>

<% if product.persisted? %>
<%= link_to "Cancel", product, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", products_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
